<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Movie data</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.1.4/tailwind.min.css">
</head>

<body>
    <div class="p-10">
        <h1 class="text-4xl mb-6">View Movie Data</h1>
        <a href="/addMovieDatas" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Add
            Movie</a>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% for(let i=0; i<record.length; i++) { %>
                <a href="/movie/viewmore/<%= record[i].id %>" class="block rounded-lg shadow-md hover:bg-gray-100">
                    <div class="flex items-center justify-center h-56 p-3">
                        <% const imagePath="/media/movieimage/" + record[i].movieimage; %>
                            <img class="object-cover h-full w-full" src="<%= imagePath %>" alt="Movie Poster">
                    </div>
                    <div class="px-4 py-2">
                        <h2 class="text-lg font-bold mb-2">
                            <%= record[i].movieName %>
                        </h2>
                        <p class="text-gray-600">
                            <%= record[i].movieDescription %>
                        </p>
                        <p class="text-gray-600">
                            <%= record[i].movieGenere %> | <%= record[i].movieReleaseDate %>
                        </p>
                        <p class="mt-2">
                            <%= record[i].movieBudget %>
                        </p>
                    </div>
                </a>
                <% } %>
        </div>
    </div>
</body>

<script>
    const movieDescription = document.querySelectorAll('.text-gray-600');
    movieDescription.forEach((desc) => {
        if (desc.innerText.length > 100) {
            desc.innerText = desc.innerText.substring(0, 100) + '...';
        }
    });

</script>
</html>